---
import Layout from '../layouts/Layout.astro';
---

<Layout title="CV - Chirayu Prasai">
	<main class="min-h-screen px-4 py-20">
		<div class="max-w-4xl mx-auto">
			<div class="mb-8">
				<h1 class="text-2xl font-medium mb-4">Curriculum Vitae</h1>
				<a 
					href="/src/assets/Chirayu CV.docx.pdf" 
					download="Chirayu_Prasai_CV.pdf"
					class="text-gray-600 hover:text-gray-900 dark:text-gray-500 dark:hover:text-gray-300"
				>
					Download PDF
				</a>
			</div>

			<div class="border border-gray-200 dark:border-gray-800">
				<embed 
					src="/src/assets/Chirayu CV.docx.pdf" 
					type="application/pdf" 
					width="100%" 
					height="1000px"
					class="w-full"
				/>
			</div>
		</div>
	</main>
</Layout>

